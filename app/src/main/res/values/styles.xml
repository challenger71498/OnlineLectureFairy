<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Base Theme -->
        <item name="colorPrimary">@color/colorBackgroundDarker</item>
        <item name="colorPrimaryDark">@color/colorBackgroundDarker</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>

        <!-- TextView -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/textGray</item>
        <item name="android:textColorSecondary">@color/textGray</item>
        <item name="android:weekSeparatorLineColor">@color/textGray</item>

        <!-- Button -->
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>

        <!-- EditText -->
        <item name="editTextColor">@color/white</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>

        <!-- SnackBar -->
        <item name="snackbarStyle">@style/SnackBarStyle</item>

        <!-- Dialog -->
        <item name="alertDialogTheme">@style/AlertLightDialogStyle</item>

        <!-- CheckBox -->
<!--        <item name="checkboxStyle">@style/CheckBoxStyle</item>-->

        <!-- RadioButton -->
<!--        <item name="radioButtonStyle">@style/RadioButtonStyle</item>-->
    </style>

    <!-- No action bar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <!-- Custom Styles -->
    <style name="SnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/colorBackgroundDarker</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textCursorDrawable">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/textGray</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
    </style>

    <style name="AlertLightDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/transparent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">70%</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
        <item name="buttonBarNegativeButtonStyle">@style/buttonBarButtonStyle.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/buttonBarButtonStyle.Neutral</item>
        <item name="buttonBarPositiveButtonStyle">@style/buttonBarButtonStyle.Positive</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/transparent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">70%</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:buttonTint">@color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/holo_red_light</item>
        <item name="android:progressBarStyle">@style/progressBarStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/buttonBarButtonStyle.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/buttonBarButtonStyle.Neutral</item>
        <item name="buttonBarPositiveButtonStyle">@style/buttonBarButtonStyle.Positive</item>
    </style>

    <style name="buttonBarButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
    </style>

    <style name="buttonBarButtonStyle.Neutral">
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="buttonBarButtonStyle.Negative">
        <item name="android:textColorPrimary">@color/colorAccentReverse</item>
    </style>

    <style name="buttonBarButtonStyle.Positive">
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <style name="progressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:color">@color/white</item>
    </style>

    <style name="CalendarDatesTheme">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/textLight</item>
    </style>

</resources>
